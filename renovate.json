{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base", "group:all"],
    "lockFileMaintenance": {
        "enabled": true,
        "groupSlug": "all"
    },
    "postUpgradeTasks": {
        "commands": [
            "sed -i 's@0.1.0@0.1.1@g' member1/Cargo.toml",
            "cargo check --workspace"
        ],
        "fileFilters": ["**/*"],
        "executionMode": "branch"
    }
}
